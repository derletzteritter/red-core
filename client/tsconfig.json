{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@typings/*": ["../types/*"],
      "@lib/*": ["lib/*"]
    },
    "outDir": "./",
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es2018",
    "allowJs": true,
    "lib": ["es2018"],
    "types": ["@citizenfx/client", "@types/node", "../types/rdr3_universal"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["./**/*"],
  "exclude": ["**/node_modules", "**/__tests__/*"]
}